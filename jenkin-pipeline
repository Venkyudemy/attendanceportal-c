pipeline {
    agent any

    environment {
        GIT_REPO = 'https://github.com/Venkyudemy/attendanceportal-c.git'
        GIT_BRANCH = 'master'
        DOCKER_DIR = 'attendanceportal-main' // folder where docker-compose.yml exists
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: "${GIT_BRANCH}", url: "${GIT_REPO}"
            }
        }

        stage('Clean Docker Environment') {
            steps {
                script {
                    echo "ðŸ§¹ Cleaning up old Docker containers and images..."
                    // Stop and remove all containers
                    sh 'docker ps -aq | xargs -r docker stop || true'
                    sh 'docker ps -aq | xargs -r docker rm || true'

                    // Remove all images
                    sh 'docker images -aq | xargs -r docker rmi -f || true'

                    // Optional: remove unused networks/volumes
                    sh 'docker system prune -af --volumes || true'
                }
            }
        }

        stage('Build & Run Services') {
            steps {
                script {
                    dir("${DOCKER_DIR}") {
                        sh 'docker compose down || true'
                        sh 'docker compose build --no-cache'
                        sh 'docker compose up -d'
                    }
                }
            }
        }

        stage('Verify Containers') {
            steps {
                sh 'docker ps'
            }
        }
    }
}
